{
  "name": "Replace",
  "description": "Replaces any text matched in a string with an alternative text.",
  "tags": [
    "preprocessing",
    "text processing"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/replace_operator"
  ],
  "properties": [
    {
      "kind": "EnumeratedProperty",
      "name": "type",
      "defaultValue": "all",
      "values": [
        "all",
        "first"
      ],
      "description": "replace first or all matches"
    },
    {
      "kind": "StringProperty",
      "name": "what",
      "defaultValue": " ",
      "description": "pattern to be matched (regular expression)"
    },
    {
      "kind": "StringProperty",
      "name": "by",
      "defaultValue": "",
      "description": "a replacement for matched pattern"
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Text",
            "type": "string",
            "description": "Text values to process",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "1",
            "factors": []
          }
        ],
        "axis": []
      }
    ]
  }
}
